generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum USER_ROLE {
  USER
  ADMIN
}

model user {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  fullName  String
  password  String
  role      USER_ROLE @default(USER)
  createdAt DateTime  @default(now())
}
